{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "minLength": 1
    },
    "hooks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1,
            "pattern": "[a-z-]+",
            "description": "Used as the webhook path"
          },
          "sender": {
            "type": "object",
            "properties": {
              "username": {
                "type": "string",
                "minLength": 1
              },
              "avatarURL": {
                "type": "string",
                "format": "uri"
              }
            },
            "additionalProperties": false
          },
          "embed": {
            "type": "object",
            "properties": {
              "title": {
                "type": "string",
                "minLength": 1
              },
              "description": {
                "type": "object",
                "properties": {
                  "content": {
                    "type": "string",
                    "minLength": 1
                  },
                  "stripHtml": {
                    "type": "boolean",
                    "default": false,
                    "description": "Strip HTML tags from `content`"
                  }
                },
                "required": [
                  "content"
                ],
                "additionalProperties": false
              },
              "url": {
                "type": "string",
                "format": "uri"
              },
              "image": {
                "type": "string",
                "format": "uri"
              },
              "thumbnail": {
                "type": "string",
                "format": "uri"
              },
              "timestamp": {
                "type": "string",
                "minLength": 1
              },
              "author": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "minLength": 1
                  },
                  "url": {
                    "type": "string",
                    "format": "uri"
                  },
                  "iconURL": {
                    "type": "string",
                    "format": "uri"
                  }
                },
                "required": [
                  "name"
                ],
                "additionalProperties": false
              },
              "footer": {
                "type": "object",
                "properties": {
                  "text": {
                    "type": "string",
                    "minLength": 1
                  },
                  "iconURL": {
                    "type": "string",
                    "format": "uri"
                  }
                },
                "required": [
                  "text"
                ],
                "additionalProperties": false
              },
              "color": {
                "type": "string",
                "minLength": 1,
                "pattern": "^#(?:[\\da-fA-F]{3}){1,2}$",
                "description": "Hex Format"
              },
              "fields": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string",
                      "minLength": 1
                    },
                    "content": {
                      "type": "string",
                      "minLength": 1
                    },
                    "inline": {
                      "type": "boolean",
                      "default": false
                    },
                    "optional": {
                      "type": "boolean",
                      "default": false,
                      "description": "If set to `true`, skips adding the field if the content resolves to an empty string"
                    },
                    "stripHtml": {
                      "type": "boolean",
                      "default": false,
                      "description": "Strip HTML tags from `content`"
                    }
                  },
                  "required": [
                    "name",
                    "content"
                  ],
                  "additionalProperties": false
                }
              }
            },
            "required": [
              "title"
            ],
            "additionalProperties": false
          },
          "webhookURL": {
            "type": "string",
            "format": "uri"
          }
        },
        "required": [
          "id",
          "embed",
          "webhookURL"
        ],
        "additionalProperties": false
      }
    }
  },
  "required": [
    "hooks"
  ],
  "additionalProperties": false
}
